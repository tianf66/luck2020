/* pages/luckResult/luckResult.wxss */

.luck_result {
  width: 100%;
}

.button {
  margin: 0;
  padding: 0;
  border: none;
  position: none;
  font-family:DroidSansFallback;
  font-size:30rpx;
  letter-spacing:0;
  /* line-height:80rpx; */
  outline: none;
  background: #FFFFFF;
}

.move-view {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  font-size: 25rpx;
  letter-spacing: 5rpx;
  line-height: 20rpx;
  color: #FFFFFF;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 5px;
  z-index: 999;
}

.move-image {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx auto 15rpx;
}

.change-luck {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0.5%;
  left: 50%;
  width: 130rpx;
  height: 40rpx;
  border-radius: 5px;
  background-color: #FFFFFF;
  border: 1px solid #707070;
  color: #707070;
  text-align: center;
  font-size: 25rpx;
  line-height: 40rpx;
  transform: translate(-50%, 0.5%);
}

.change-luck cover-image {
  width: 35rpx;
  height: 35rpx;
  padding: 0 6rpx;
}
button::after {
  border: none;
  outline: none;
}

action-sheet-item{
  display: inline !important;
  padding: 0 !important;
}

action-sheet {
  z-index: 999999;
}